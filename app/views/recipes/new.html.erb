<h1> Create a new Recipe </h1>

 <%= form_for(@recipe) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br />
    <%= f.label :ingredients %>
    <%= f.text_field :ingredients %>
    <br />
    <%= f.label :directions %>
    <%= f.text_field :directions %>
    <br />
    <%= f.label :difficulty %>
    <%= f.text_field :difficulty %>
    <br />
    <%= f.label :prep_time %>
    <%= f.text_field :prep_time %>
    <input type="hidden" name="recipe[category_id]" value="1">
    <input type="hidden" name="recipe[user_id]" value="1">
    <%= f.submit "Create a new Recipe" %>

  <% end %>
